---
interface Props {
  playlistUrl: string;
}

const { playlistUrl } = Astro.props as Props;
// console.log(playlistUrl);
---

<div class="card flex bg-base-100 w-full max-w-8xl">
  <div class="card-body">
    <h2 class="card-title text-2xl">What I've been listening to</h2>
    <div class="w-full max-w-8xl mt-4">
      <iframe
        class="rounded-xl"
        src={playlistUrl}
        width="100%"
        height="380"
        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
        loading="lazy"></iframe>
    </div>
  </div>
</div>

